<div class="container" style="margin-top: 120px;">
  <h1>Messages</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Subject</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.name %></td>
          <td><%= message.email %></td>
          <td><%= message.phone %></td>
          <td><%= message.subject %></td>
          <td><%= message.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
